<h1>Sponsored Post: <%= @sponsored_post.title %></h1>
<p><%= "Price: $#{@sponsored_post.price}" %></p>

<div class="row">
  <div class="col-md-8">
    <p><%= @sponsored_post.body %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_topic_sponsored_post_path(@sponsored_post.topic, @sponsored_post), class: "btn btn-success" %>
    <%= link_to "Back to Topic", topic_path(@sponsored_post.topic), class: "btn btn-info" %>
  </div>
</div>
